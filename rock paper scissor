#include<iostream>
#include<cstdlib>
#include<ctime>
using namespace std;





int main(){
	cout<<"lets play rock paper scissor "<<endl;
	srand(time(0));
	int x;
	for(int i=1 ;i>=0;i++)
	{
	
	x=rand()%3+1;
	//1.rock2.paper.3.scisor
	int y;
	cout<<"go with your guts \n1.rock\n2.paper\n3.scissor"<<endl;
	cin>>y;
	
	if(x==y)
	{
		cout<<"tie";
	}
	else if(x==1&&y==2)
	{
		cout<<"you won";
	}
	else if(x==1&&y==3)
	{
		cout<<"you lost";
	}
	
else if(x==2&&y==1)
	{
		cout<<"you lost ";
	}
	else if(x==2&&y==3)
	{
		cout<<"you won";
	}
	else if(x==3&&y==1)
	{
		cout<<"you won ";
	}
	else if(x==3&&y==2)
	{
		cout<<"you lost";
	}
	switch (x)
	{
		case 1:
			cout<<endl<<"i picked rock";break;
			case 2:
			cout<<endl<<"i picked paper";break;
			case 3:
			cout<<endl<<"i picked  scissor";break;
	}
	cout<<endl<<"press 0 to exit else press any number to continue to continue"<<endl;
	int exit;
	cin>>exit;
	if(exit==0)
	{
		break;
	}
}
}
